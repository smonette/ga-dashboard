<h3 class="header-center">Shoutouts</h3>
<ul id="shoutout_container">
  <% @shoutouts_all.each do |shoutout| %>
    <li><strong><%= User.find_by_id(shoutout.user_id).first_name %>:</strong> <%= shoutout.content %></li>
    <%= form_for @like do |f| %>
      <%= hidden_field_tag(:parent_id, shoutout.id) %>

      <%= f.submit "Like", class: "btn btn-default" %>
    <% end %>
    <%= shoutout.likes.order(created_at: :asc).last.likes %>

  <% end %>
</ul>

<% if session[:id] != nil %>
<%= form_for @shoutout do |f| %>
<div class="form-group">
  <%= f.text_field :content, class: "form-control", placeholder: "Leave a shoutout" %>
</div>
<div class="form-group">
  <%= f.submit "Shoutout", class: "form-control btn btn-success" %>
  </div>
<% end %>
<% else %>
  <div class="text-center shout-hold">
    <h4>Want to leave a shoutout?</h4>
    <p><a data-toggle="modal" data-target="#signupModal" href="">SIGN UP</a> or <a data-toggle="modal" data-target="#loginModal" href="">LOG IN</a> now!</p>
  </div>
<% end %>


