<h3>Shoutouts</h3>
<ul id="shoutout_container">
  <% @shoutouts_all.each do |shoutout| %>
    <li><strong><%= User.find_by_id(shoutout.user_id).first_name %>:</strong> <%= shoutout.content %></li>

  <% end %>
</ul>

<% if session[:id] != nil %>
<%= form_for @shoutout do |f| %>
<div class="form-group">
  <%= f.text_field :content, class: "form-control", placeholder: "Leave a shoutout" %>
</div>
<div class="form-group">
  <%= f.submit "Shoutout", class: "form-control btn btn-success" %>
  </div>
<% end %>
<% else %>
  <h5><a data-toggle="modal" data-target="#signupModal" href="">SIGN UP</a> or <a data-toggle="modal" data-target="#loginModal" href="">LOG IN</a> to leave shoutouts!</h5>
<% end %>


