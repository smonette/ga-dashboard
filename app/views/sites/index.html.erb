<div class="row">
  <div class="col-md-4">
    <div class="box">

      <!-- Button trigger modal -->
      <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#loginModal">
        Login
      </button>

      <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#signupModal">
        Signup
      </button>

    </div>
  </div>
  <div class="col-md-4">
    <div class="box"></div>
  </div>
  <div class="col-md-4">
    <div class="box"></div>
  </div>
</div>







<% if session[:user_id] == nil %>
<div class="idnil"></div>
<% else %>
<div class="iduser">Hello, <%= @current_user.first_name %></div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render partial: "sessions/new"   %>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render partial: "passwords/new"   %>
</div>

<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render partial: "users/new", :locals => {:user => @user} %>
</div>
