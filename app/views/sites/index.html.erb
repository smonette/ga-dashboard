<div class="row">
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-6">
        <div class="box">
          <!-- Button trigger modal -->
          <% if session[:id] == nil %>
            <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#loginModal">
              Login
            </button>

            <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#signupModal">
              Signup
            </button>
          <% else %>
            <h3>Welcome, <%= @current_user.first_name %>!</h3>
            <br>
            <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#editModal">
              Edit Your Profile
            </button>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="box">
          <%= render partial: "trucks" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="box tall">


        </div>
      </div>
      <div class="col-sm-6">
        <div class="box">
          <%= render partial: "soup" %>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="box">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="col-sm-4">
    <div class="box tall">
      <%= render partial: "shoutouts/new" %>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="box">

        </div>
      </div>
    </div>
  </div>

</div>







<% if session[:id] == nil %>
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render partial: "sessions/new"   %>
  </div>

  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render partial: "users/new", :locals => {:user => @user} %>
  </div>

<% else %>
  <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render partial: "users/edit", :locals => {:user => @current_user} %>
    </div>
<% end %>

<!-- Modal -->




<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= render partial: "passwords/new"   %>
</div>

